<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gxa.mapper.EmpMapper">
<resultMap id="empResultMap" type="com.gxa.entity.Emp">
    <id  property="id" column="emp_id"></id>
    <result property="name" column="emp_name"></result>
    <result property="gender" column="emp_gender"></result>
    <result property="status" column="emp_status"></result>
    <result property="dept.id" column="dept_id"></result>
    <result property="dept.name" column="dept_name"></result>
</resultMap>
    <insert id="insertEmp" parameterType="com.gxa.entity.Emp">
        insert into emp (name,gender,dept_id,status)
        VALUE(#{name},#{gender},#{dept.id},#{status})
    </insert>
    <update id="updataEmp" parameterType="com.gxa.entity.Emp">
        UPDATE emp
        SET name=#{name},gender=#{gender},status=#{status},dept_id=#{dept.id}
        WHERE id=#{id}
    </update>
    <delete id="deleteById" parameterType="com.gxa.entity.Emp">
        DELETE FROM emp
        WHERE id=#{id}
    </delete>
    <select id="selectAll" resultMap="empResultMap">
       select e.id as emp_id,e.name as emp_name,e.gender as emp_gender,e.status
       as emp_status,d.id as dept_id,d.name as dept_name
       from emp e,dept d
       where e.dept_id=d.id
    </select>
    <select id="slectAllDept" resultType="com.gxa.entity.Dept">
        SELECT *
        FROM dept
    </select>
    <select id="queryById" resultMap="empResultMap" parameterType="java.lang.Integer">
        SELECT e.id as emp_id,e.name as emp_name,e.gender as emp_gender,e.status,d.id as dept_id,d.name as dept_name
        FROM emp e,dept d
        WHERE e.dept_id=d.id AND e.id=#{id}
    </select>
</mapper>