<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gxa.mapper.UserMapper">
    <insert id="insert" parameterType="user" >
         INSERT INTO t_user(user_name,pwd)
        VALUES(#{name},#{pwd})
    </insert>
    <select id="getUserByNameAndId" resultType="com.gxa.entity.User">
        select user_name,pwd
        from t_user
        where user_name=#{name} and pwd=#{pwd}
    </select>

    <resultMap id="demo1" type="com.gxa.entity.User">
        <id property="id" column="id"/>
        <result property="name" column="user_name"/>
        <result property="pwd" column="pwd"/>
        <result property="salt" column="salt"/>
    </resultMap>
    <select id="getByname" resultMap="demo1">
        select *
        from t_user
        where user_name=#{name}
    </select>
</mapper>